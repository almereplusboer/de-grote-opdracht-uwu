@using System.Data;
@using XmlCrud.AppCode;
    
<!DOCTYPE html>


@{
    SongMethods mySongMethods = new SongMethods();
    string file = @"~\App_Data\Playlist.json";
    DataSet ds = mySongMethods.GetAllSongs(file);
    Session["playlistClass"] = mySongMethods;
    Session["file"] = file;
}
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <br /><br />

    <table class="table-bordered">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Artist</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Time</th>
            <th>File</th>
        </tr>

        @foreach (DataRow dr in ds.Tables["song"].Rows)
        {
            <tr>
                <td>@dr["id"]</td>
                <td>@dr["title"]</td>
                <td>@dr["artist"]</td>
                <td>@dr["year"]</td>
                <td>@dr["genre"]</td>
                <td>@dr["time"]</td>
                <td>@dr["file"]</td>
                <td><a href="~/Pages/DeleteSong.cshtml" ?id="@dr["id"]">Delete</a></td>
            </tr>
        }
    </table>

    <br /><br />
    <a href="Pages\CreateSong.cshtml">Add new song</a>
</body>
</html>